<Window x:Class="ThreadPriorityDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thread Priority Demo" Height="300" Width="400">
    <StackPanel Margin="20">
        <Button Content="Start Progress Thread" Click="StartProgress_Click" Margin="0,5"/>
        <Button Content="Start High Priority Thread" Click="StartPriority_Click" Margin="0,5"/>
        <Button Content="Try Update UI Without Dispatcher" Click="StartFail_Click" Margin="0,5"/>
        <ProgressBar x:Name="Progress" Height="25" Margin="0,10" Minimum="0" Maximum="100"/>
        <TextBlock x:Name="StatusText" FontSize="16" Margin="0,10"/>
    </StackPanel>
</Window>