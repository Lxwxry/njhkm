<Window x:Class="ThreadJoinDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thread Join Demo" Height="300" Width="400">
    <StackPanel Margin="20">
        <Button Content="Start Threads" Click="StartThreads_Click" Margin="0,5"/>
        <TextBlock Text="Lowest:"/>
        <TextBlock x:Name="LowText" FontSize="14"/>
        <TextBlock Text="Normal:"/>
        <TextBlock x:Name="NormText" FontSize="14"/>
        <TextBlock Text="Highest:"/>
        <TextBlock x:Name="HighText" FontSize="14"/>
        <TextBlock x:Name="ResultText" FontSize="16" Margin="10,5"/>
    </StackPanel>
</Window>